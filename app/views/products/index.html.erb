<div class='w-5/6 mx-auto' data-controller="infinited-scrolling" data-action="scroll@window->infinited-scrolling#scroll">
  <%= link_to 'New Product', new_product_path %>
  <div class='flex flex-col space-y-3 items-stretch w-full'>
    <div data-infinited-scrolling-target="entries">
      <%= render @products %>
    </div>
  </div>
  <div data-infinited-scrolling-target="pagination">
    <%= paginate @products %>
  </div>
</div>

