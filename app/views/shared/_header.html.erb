<header class='w-screen h-14 bg-white'>
  <div class='w-5/6 mx-auto h-full flex flex-row justify-between items-stretch'>
    <div class='font-bold flex-none self-center text-lg'>
      <%= link_to 'RUKU', root_path %>
    </div>
    <div class='flex-auto'>

    </div>
    <div class='flex-none flex flex-row items-stretch justify-end space-x-10'>
      <% if user_signed_in? %>
        <div class='h-full'>
          <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: 'text-sm grid place-items-center text-gray-700 box-border h-full' %>
        </div>
      <% else %>
        <div class='h-full'>
          <%= link_to "Sign In", new_user_session_path, class: 'text-sm grid place-items-center text-gray-700 box-border h-full' %>
        </div>
      <% end %>
    </div>
  </div>
</header>